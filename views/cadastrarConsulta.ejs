<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Consulta</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Formulário para seleção da categoria de médicos -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Selecione a Categoria de Médicos</h3>
        </div>
        <div class="card-body">
          <form action="/usuario/categoria-medicos" method="POST">
            <div class="form-group">
              <label for="categoria">Categoria</label>
              <select class="form-control" id="categoria" name="categoria">
                <option value="clinico geral">Clínico Geral</option>
                <option value="pediatra">Pediatra</option>
                <option value="cardiologista">Cardiologista</option>
                <!-- Adicione outras opções conforme necessário -->
              </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Buscar Médicos</button>
          </form>
        </div>
      </div>
      
      <!-- Formulário para exibir os médicos da categoria selecionada -->
      <% if (medicos) { %>
        <div class="card mt-4">
          <div class="card-header">
            <h3 class="text-center">Médicos da Categoria Selecionada</h3>
          </div>
          <div class="card-body">
            <form action="/usuario/cadastrar/consulta" method="POST">
              <div class="form-group">
                <label for="medico">Médico</label>
                <select class="form-control" id="medico" name="medico">
                  <% medicos.forEach(medico => { %>
                    <option value="<%= medico.nome %>"><%= medico.nome %></option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="cpf">CPF</label>
                <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Digite seu CPF">
              </div>
              <div class="form-group">
                <label for="data">Data</label>
                <input type="date" class="form-control" id="data" name="data">
              </div>
              <div class="form-group">
                <label for="horario">Horário</label>
                <input type="time" class="form-control" id="horario" name="horario">
              </div>
              <button type="submit" class="btn btn-primary btn-block">Agendar Consulta</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Bootstrap JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
