<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>

<header>
    <%- include("partines/nav.ejs") %>
</header>

<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                 <h1>Cadastro de consulta</h1>
            </div>
            <div class="card-body">
                <% if(dados == undefined) { %>
                    <form method="post" action="/create">
                        <input type="text" name="name" id="name" class="form-control" placeholder="Nome do paciente" >
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email do cliente">
                        <input type="text" name="description" id="description" class="form-control" placeholder="Descricao">
                        <input type="text" name="cpf" id="cpf" class="form-control cpf" placeholder="CPF">
                        <input type="date" name="date" id="date" class="form-control">
                        <input type="time" name="time" id="time" class="form-control">
                        <button class="btn btn-success btn-block">Agendar</button>
                    </form>
                    
                <% } else { %>
                    <form action="http://localhost:8080/edit/save/<%= dados._id%>" method="post">
                        <input type="text" name="name" id="name" class="form-control" placeholder="Nome do paciente" value="<%= dados.name %>">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email do cliente" value="<%= dados.email%>">
                        <input type="text" name="description" id="description" class="form-control" placeholder="Descricao" value="<%= dados.description %>">
                        <input type="text" name="cpf" id="cpf" class="form-control cpf" placeholder="CPF" value="<%= dados.cpf %>">
                        <input type="date" name="date" id="date" class="form-control">
                        <input type="time" name="time" id="time" class="form-control">
                    <button class="btn btn-success btn-block edit">Salvar</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

   

   
</body>
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
<script src="jquery.mask.min.js"></script>
<script>
     $('.cpf').mask('000.000.000-00');

</script>
</html>

<%- include("partines/footer.ejs"); %>
