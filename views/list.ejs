<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todas consultas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>

<header>
    <%- include("partines/nav.ejs") %>
</header>

<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Consulta</h1>
            </div>
            <form action="/searchResult" method="get">
                <div class="card-body">
                    <input type="search" name="search" id="search" placeholder="Pesquisa por e-mail ou CPF">
                    <button class="btn btn-success">Pesquisar</button>
                </div>
            </form>
        </div>
        <br>
    </div>

    <% events.forEach(event => { %>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1><%= event.description %></h1>
                </div>
                <div class="card-body">
                    <h4>Nome do Paciente: <%= event.name %></h4>
                    <h4>Email do Paciente: <%= event.email %></h4>
                    <h4>CPF do Paciente: <%= event.cpf %></h4>
                    <hr>
                </div>
                </div>
        </div>

        <hr>

    <% })%>
    
</body>

</html>

<%- include("partines/footer.ejs"); %>
